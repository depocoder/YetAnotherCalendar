    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python debug backend",
            "request": "attach",
            "type": "python",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app/src"
                }
            ],
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": true
        }
    ]
}